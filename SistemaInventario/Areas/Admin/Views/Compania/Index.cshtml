@model IEnumerable<SistemaInventario.Modelos.Compania>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Comañía</h2>
    </div>
    <div class="col-6 text-right">
        @if (Model.Count() == 0)
        {
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> Crear nueva compañía</a>
        }
    </div>

</div>
<br />

<div class="mt-4 rounded">
    <table id="tblDatos" class="table table-striped" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Pais</th>
                <th>Ciudad</th>
                <th>Direccion</th>
                <th>Teléfono</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/compania.js"></script>
}