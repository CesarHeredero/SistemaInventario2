
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de usuarios</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus"></i> Crear nuevo usuario</a>
    </div>

</div>
<br />

<div class="mt-4 rounded">
    <table id="tblDatos" class="table table-striped" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>User Name</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Bloquear</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/usuario.js"></script>
}